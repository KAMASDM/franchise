# Firebase Configuration
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your_project_id-default-rtdb.firebaseio.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Gemini API Key (for Firebase Functions - chatbot & AI content generation)
# Get your key from: https://aistudio.google.com/app/apikey
# Add this to functions/.env file, NOT here
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Functions URLs (optional - will use defaults if not provided)
VITE_FIREBASE_SEND_MESSAGE_URL=https://us-central1-your-project-id.cloudfunctions.net/sendMessage
VITE_FIREBASE_START_CHAT_URL=https://us-central1-your-project-id.cloudfunctions.net/startChat

# Admin Configuration
# Comma-separated list of admin user IDs from Firebase Auth
VITE_ADMIN_UIDS=your_admin_user_id_from_firebase_auth

# EmailJS Configuration (for email notifications)
# Sign up at https://www.emailjs.com/ and create templates
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# EmailJS Template IDs (create these in EmailJS dashboard)
VITE_EMAILJS_TEMPLATE_SUBMISSION=template_submission
VITE_EMAILJS_TEMPLATE_ADMIN=template_admin_notification
VITE_EMAILJS_TEMPLATE_APPROVAL=template_brand_approval
VITE_EMAILJS_TEMPLATE_REJECTION=template_brand_rejection
VITE_EMAILJS_TEMPLATE_STATUS=template_status_update
VITE_EMAILJS_TEMPLATE_REMINDER=template_reminder
VITE_EMAILJS_TEMPLATE_WELCOME=template_welcome
VITE_EMAILJS_TEMPLATE_NEW_LEAD=template_new_lead
VITE_EMAILJS_TEMPLATE_SAVED_SEARCH=template_saved_search
VITE_EMAILJS_TEMPLATE_INQUIRY_RESPONSE=template_inquiry_response

# Push Notifications - VAPID Key
# Generate using: npx web-push generate-vapid-keys
# Or use the online generator at https://vapidkeys.com/
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# App Configuration
VITE_APP_NAME=ikama - Franchise Hub
VITE_APP_URL=https://franchise-portal.com
