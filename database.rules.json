{
  "rules": {
    "chats": {
      "$roomId": {
        ".read": "auth != null && ($roomId.contains(auth.uid) || root.child('admins').child(auth.uid).exists())",
        ".write": "auth != null && ($roomId.contains(auth.uid) || root.child('admins').child(auth.uid).exists())",
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['senderId', 'senderName', 'message', 'timestamp'])"
          }
        },
        "typing": {
          "$userId": {
            ".read": "auth != null",
            ".write": "auth != null && auth.uid == $userId"
          }
        }
      }
    },
    "chatRooms": {
      "$roomId": {
        ".read": "auth != null && ($roomId.contains(auth.uid) || root.child('admins').child(auth.uid).exists())",
        ".write": "auth != null && ($roomId.contains(auth.uid) || root.child('admins').child(auth.uid).exists())",
        ".validate": "newData.hasChildren(['id', 'participants', 'createdAt'])"
      }
    },
    "userStatus": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId",
        ".validate": "newData.hasChildren(['online', 'lastSeen'])"
      }
    }
  }
}
